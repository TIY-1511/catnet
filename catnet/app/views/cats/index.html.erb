

<div class="container">
	<h1>Cats</h1>
	
	<div class="row">

		
		<% @cats.each do | cat | %>

		  <div class="col-sm-4 col-md-3">
		    <div class="thumbnail">
		      <%= image_tag(cat.url) %>
		      <div class="caption">
		        <h3><%= cat.name %></h3>
		        <p><%= cat.description %></p>
			    <%= form_tag(voteup_cat_path(cat), method: "post") do %>
					<%= submit_tag("Vote Up", class: "btn btn-default") %>
					<%= pluralize(cat.vote_count, 'vote') %>	
				<% end %>
		      </div>
		    </div>
		  </div>
		  
		<% end %>

	</div>


</div>

