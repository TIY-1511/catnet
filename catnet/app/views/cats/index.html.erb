

<div class="container">
	<h1>Cats</h1>
	
	<div class="row">

		
		<% @cats.each_with_index do | cat, index | %>

		  <div class="col-sm-4 col-md-3">
		    <div class="thumbnail">
		      <%= image_tag(cat.url) %>
		      <div class="caption">
		        <h3><%= cat.name %></h3>
		        <p><%= cat.description %></p>
			    <%= form_tag(voteup_cat_path(cat), method: "post") do %>
					<%= submit_tag("Vote Up", class: "btn btn-default") %>
					<%= pluralize(cat.vote_count, 'vote') %>	
				<% end %>
		      </div>
		    </div>
		  </div>

		  <% if (index + 1) % 3 == 0 %>
		    <div class="clearfix visible-lg"></div>
		  <% end %>

		  <% if (index + 1) % 4 == 0 %>
		    <div class="clearfix visible-sm"></div>
		  <% end %>

		<% end %>

	</div>


</div>

