

<div class="container">
	<h1>Cats</h1>
	
	<div class="row">

		
		<% @cats.each do | cat | %>
			
			<div class="col-md-6 col-sm-4">
				<%= cat.name %><br />
				<%= cat.description %><br />
				<%= image_tag(cat.url, class: "img-responsive") %>

				<%= form_tag(voteup_cat_path(cat), method: "post") do %>
					<%= submit_tag("Vote Up", class: "btn btn-default") %>
					<%= pluralize(cat.vote_count, 'vote') %>	
				<% end %>
				<br />
			</div>
		<% end %>

	</div>


</div>